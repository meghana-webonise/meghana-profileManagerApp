<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
       >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/bottomMargin"
            android:layout_marginBottom="@dimen/bottomMargin"
            >
            <RelativeLayout
                android:background="@drawable/location_selector"
                android:layout_below="@+id/tool_bar"
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/ivLocation"
                    android:background="@drawable/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvLocationOfUser"
                    android:layout_below="@+id/ivLocation"
                    style="@style/textSize"
                    android:textStyle="italic"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:background="@drawable/battery_selector"
                android:layout_below="@+id/tool_bar"
                android:id="@+id/battery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp">

                <ImageView
                    android:id="@+id/ivBattery"
                    android:background="@drawable/battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvBattery"
                    android:layout_below="@+id/ivBattery"
                    style="@style/textSize"
                    android:textStyle="italic"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/bottomMargin"
            >

            <RelativeLayout
                android:background="@drawable/time_selector"
                android:layout_below="@+id/tool_bar"
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/ivTimer"
                    android:background="@drawable/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvSetTime"
                    android:layout_below="@+id/ivTimer"
                    style="@style/textSize"
                    android:textStyle="italic"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:background="@drawable/movement_selector"
                android:layout_below="@+id/tool_bar"
                android:id="@+id/movement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp">

                <ImageView
                    android:id="@+id/ivMovement"
                    android:background="@drawable/car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvMovementOfUser"
                    android:layout_below="@+id/ivMovement"
                    style="@style/textSize"
                    android:textStyle="italic"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

        </TableRow>
    </TableLayout>

</RelativeLayout>




